<ul>
	<li style="display:inline">
		<div class="image">
			<%= image_tag(@product.image.profile.url)%>
		</div>
	</li>
	<li style="display:inline">
		<div class="row" style="width:60%; float:right"> 
			<h1><%= markdown_to_html @product.name %></h1>
			<small>by: <%= @user.first_name%></small>
			<% if policy(@product).update? %> <%= link_to "Edit", edit_product_path(@product), class: 'btn btn-success'%><%end%> 
			<% if policy(@product).destroy? %> <%= link_to "Delete", @product, class: 'btn btn-danger', method: :delete, data: {confirm: "Are you sure you want to delete this Product?"}%><%end%>
			
			<h3>List Price: <del> $<%= @list_price %></h3>
			<h3 style="color: red">Sale Price: $<%= @product.price %></h3>
			<h2>Details:</h2>
			<p><%= markdown_to_html @product.description %></p>
		</div>
	</li>
</ul>